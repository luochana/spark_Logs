<configuration>
    <property>
        <name>hbase.rootdir</name>
        <value>hdfs://spark1:9000/hbase</value>
    </property>
    <property>
        <name>hbase.cluster.distributed</name>
        <value>true</value>
    </property>

    <property>
        <name>hbase.tmp.dir</name>
        <value>/home/luochan/hbase2.2.0_data/tmp</value>
    </property>

    <property>
        <name>hbase.zookeeper.quorum</name>
        <value>spark1,spark2,spark3</value>
        <description>zookeeper节点</description>
    </property>
    <property>
        <name>hbase.zoopkeeper.property.dataDir</name>
        <value>/home/luochan/zk/data</value>
    </property>
    <property>
        <name>hbase.zookeeper.property.clientPort</name>
        <value>2181</value>
    </property>
    <property>
        <name>hbase.unsafe.stream.capability.enforce</name>
        <value>false</value>
    </property>
</configuration>
